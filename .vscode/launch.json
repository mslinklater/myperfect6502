	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) CBMBASIC",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/myperfect6502",
			"args": ["cbmbasic/cbmbasic.bin", "40960", "33150", "1"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "(gdb) Combat",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/myperfect6502",
			"args": ["combat4k.bin", "61440", "1000", "0"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}

	]
}